# Configuration file for tennis.paris.fr-listener
# Copy this file to .env and customize values for local usage

# List of courts to monitor (comma-separated)
# Example: "Philippe Auguste,Candie,Thiéré,La Faluère"
COURTS="Philippe Auguste,Candie,Thiéré,La Faluère"

# Time range for checking availability (hours)
# Example: 9 for 9 AM, 22 for 10 PM
HOUR_RANGE_START=9
HOUR_RANGE_END=22

# Date to check (DD/MM/YYYY format)
# Example: 23 for day, 05 for May, 2021 for year
WHEN_DAY=23
WHEN_MONTH=05
WHEN_YEAR=2021

# Optional: Filter by specific court numbers (JSON format)
# Example: '{"La Faluère": [5,6,7,8,17,18,19,20,21], "Alain Mimoun": [1,2,3]}'
# Leave empty or omit to include all courts
COURT_NUMBERS=

# Optional: Filter for covered courts only
# Set to 'true' to only show covered courts, leave empty or set to 'false' otherwise
COVERED_ONLY=false

# Optional: Look for 2 consecutive hours
# Set to 'true' to search for 2-hour blocks, leave empty or set to 'false' otherwise
TWO_HOURS=false

# Google Chat webhook URL (for GitHub Actions notifications)
# Create an incoming webhook in your Google Chat space
GOOGLE_CHAT_WEBHOOK=
